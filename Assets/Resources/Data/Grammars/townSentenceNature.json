      "bird bath",
      "bird feeder",
      "butterfly garden",
      "arboretum",
      "fountain",
      "gazebo",
      "vine-covered trellis",
    ],

    "adjectiveTreeBig": [
      "towering",
      "tall",
      "imposing",
      "monumental",
      "august"
    ],

    "nounProtection": [

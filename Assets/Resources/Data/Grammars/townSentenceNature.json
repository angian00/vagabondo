{
  "rules": {
    "townSentenceNature": [
      "#expressionNatureLocation#, #expressionNatureDescription#",
      "#expressionNatureDescriptionSimple# #expressionNatureLocation#",
    ],

    "expressionNatureLocation": {
      "clauses": {
        "#expressionLocationCenter# of #expressionTown#": 6,
        "#expressionLocationEdge# of #expressionTown#": 6,
        "#expressionLocationStreet#": 4,
        "#expressionLocationRural#": 2,
      }
    },

    "expressionNatureDescription": [
      "#expressionNatureDescriptionSimple#",
      "#expressionNatureDescriptionMultiple#",
    ],

    "expressionNatureDescriptionMultiple": [
      "#expressionNatureDescriptionTreeBenefit# and a spot for #adjectiveSerene# #nounContemplation#"
    ],

    "expressionNatureDescriptionSimple": [
      "#expressionNatureDescriptionTreeBenefit#",
      "#expressionNatureDescriptionNatureItemStreetBenefit#",
    ],

    "expressionNatureDescriptionTreeBenefit": [
      "#expressionTree# provides #nounProtection# for #nounMerrymaker.s#",
    ],

    "expressionNatureDescriptionNatureItemStreetBenefit": [
      "#expressionNatureItem# provides a spot for #adjectiveSerene# #nounContemplation#",
    ],

    "expressionNatureItem": [
      "#nounNatureItemStreet.a#",
      "#adjectiveSmall.a# #nounNatureItemStreet#",
      "#expressionTree#",
    ],

    "expressionTree": [
      "#nounTree.a# tree",
      "#adjectiveTreeBig.a# #nounTree#",
    ],
    "nounNatureItemStreet": [
      "planter box",
      "potted plant",
      "flowerbed",
      "wildflower patch",
      "hedge",
      "topiary",
      "rock garden",
      "moss-covered stone",

{
  "rules": {
    "townSentenceNature": "#expressionNatureLocation#, #expressionNatureDescription#",

    "expressionNatureLocation": {
      "clauses": {
        "#expressionLocationEdge# of #expressionTown#": 10,
        "#expressionLocationRural#": 2
      }
    },

    "expressionTown": [
      "the #townSize#",
      "the settlement",
      "the community",
      "the township",
      "the neighborhood",
      "town"
    ],

    "expressionTownBig": [
      "the urban sprawl"
    ],


    "expressionLocationEdge": [
      "at the edge",
      "on the outskirts",
      "near the boundary",
      "at the periphery",
      "on the fringe",
      "nestled on the outskirts",
      "by the outskirts",
      "along the border",
      "near the verge"
    ],

    "expressionLocationRural": [
      "amidst the wilderness at the town's edge",
      "just beyond the town limits",
      "bordering the rural countryside",
      "adjacent to the farmland"
    ],

    "expressionNatureDescription": [
      "#expressionTree# provides #nounTreeBenefit# for #nounMerrymaker.s#",
      "#expressionTree# provides a spot for #adjectiveSerene# #nounNaturePurpose#",
      "#expressionTree# provides #nounTreeBenefit# for #nounMerrymaker.s# and a spot for #adjectiveSerene# #nounNaturePurpose#"
    ],

    "expressionTree": [
      "#nounTree.a# tree",
      "#adjectiveTreeBig.a# #nounTree#"
    ],

    "adjectiveTreeBig": [
      "towering",
      "tall",
      "imposing",
      "monumental",
      "august"
    ],

    "nounTreeBenefit": [
      "shade",
      "shelter",
      "protection",
      "cover",
      "refuge",
      "sanctuary",
      "shield",
      "haven",
      "asylum",
      "retreat",
      "comfort"
    ],

    "nounNaturePurpose": [
      "confessions",
      "contemplation",
      "conversations",
      "cuddling",
      "embraces",
      "encounters",
      "gestures",
      "interlude",
      "kisses",
      "laughter",
      "memories",
      "moments",
      "reflection",
      "rendezvous",
      "reprieve",
      "solitude"
    ]
  }
}
